@inherits Base.PopupMasterComponent

<div class="modal fade show d-block" id="contactModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body p-0 m-0">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-lg-12 grid-margin stretch-card card p-0">
                        <div class="card">
                            <div class="card-body">
                                <EditForm Model="@Price" OnValidSubmit="OnSubmit" OnInvalidSubmit="InvalidSubmission">
                                    <DataAnnotationsValidator />
                                    <div class="d-flex justify-content-between">
                                        <p class="card-title">Purchase Price</p>
                                    </div>
                                    <div class="row mt-3">
                                        <div class="form-group row">
                                            <label for="price" class="col-sm-3 col-form-label padding-top-nill fw-bold">Price</label>
                                            <div class="col-sm-6">
                                                <InputNumber class="form-control" id="price" @bind-Value=@Price placeholder="Price (Rs)" />
                                                <ValidationMessage For="@(() => Price)" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mb-2">
                                        <label class="text-danger">@errormsg</label>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Ok</button>
                                </EditForm>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
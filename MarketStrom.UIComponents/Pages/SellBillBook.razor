@page "/SellBillBook"
@using Blazorise.Components
@using Blazorise;
@using MarketStrom.DataModels.Models;


<style>
    .flatpickr-calendar.static {
        top: auto !important;
    }
</style>

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <p class="card-title">Sell-Bill Book</p>
                </div>
                <div class="row mt-3">
                    <div class="row">
                        <div class="col-5 d-flex align-items-center">
                            <label for="person" class="fw-bold col-4">Person Name</label>
                            <div class="col-7 ms-3">
                                <Autocomplete TItem="Person" TValue="Person" Placeholder="Type To Search..." Data="@AllPerson"
                                              TextField="@((item) => item.FirstName + " " + item.LastName)" ValueField="@((item) => item)"
                                @bind-SelectedValue="@SelectedPerson" FreeTyping AutoPreSelect=true CloseOnSelection=true Filter="AutocompleteFilter.Contains">
                                </Autocomplete>
                            </div>
                        </div>
                        <div class="col-5 d-flex align-items-center">
                            <label for="date" class="fw-bold col-3">Date</label>
                            <div class="col-6">
                                <Blazorise.DatePicker TValue="DateTime?" @bind-Date="@SelectedDate" InputMode="DateInputMode.Date" SelectionMode="DateInputSelectionMode.Single" />
                            </div>
                        </div>
                        <div class="col-2 d-flex align-items-center">
                          @*  @if (SelectedDate != null && SelectedPerson != null && SellOrders.Count > 0)
                            {*@
                                <button class="btn btn-warning" @onclick=BillGenerate>Generate Bill</button>
                            @*}*@
                        </div>
                    </div>
                    @{
                        int serialNumber = 1;
                    }
                    <div class="table-responsive pt-3">
                        <table id="orderList" class="table table-striped expandable-table table-bordered">
                            <thead>
                                <tr class="text-center">
                                    <th>Sr. No.</th>
                                    <th>Order No.</th>
                                    <th>Category</th>
                                    <th>Quantity</th>
                                    <th>Weight (Kg)</th>
                                    <th>Price</th>
                                    <th>Labour</th>
                                    <th>Commission</th>
                                    <th>Total Amount (Rs)</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (SellOrders.Count > 0)
                                {
                                    @foreach (var data in SellOrders)
                                    {
                                        <tr id="@("row"+data.Id)" class="text-center">
                                            <td>@serialNumber</td>
                                            <td>@data.OrderNumber</td>
                                            <td>@data.CategoryName</td>
                                            <td>@(data.Quantity == null ? "-" : data.Quantity)</td>
                                            <td>@(data.Kg == null ? "-" : data.Kg)</td>
                                            <td>@data.Price</td>
                                            <td>@(data.LabourAmount == null ? "-" : data.LabourAmount)</td>
                                            <td>@(data.ComissionAmount == null ? "-" : data.ComissionAmount)</td>
                                            <td>@data.TotalAmount</td>
                                        </tr>
                                        serialNumber++;
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="9" class="text-center"> There Is No Orders To Display</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
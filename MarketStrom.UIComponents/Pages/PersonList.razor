@page "/PersonList/{PersonRole}"

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <p class="card-title">@PersonRole List</p>
                    <div class="d-flex align-items-center">
                        <div class="card card-green">
                            <button class="btn btn-primary btn-lg text-white" style="padding:0.5rem;border-radius:inherit;" @onclick="() => AddPerson(0)">
                                <i class="mdi mdi-account-plus"></i>
                                Add
                            </button>
                        </div>
                    </div>
                </div>
                @{
                    int serialNumber = 1;
                }
                <div class="table-responsive pt-3">
                    <table id="personList" class="table table-striped expandable-table table-bordered">
                        <thead>
                            <tr class="text-center">
                                <th>Sr. No.</th>
                                <th>Person Name</th>
                                <th>Mobile No.</th>
                                <th>City</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (AllPerson.Count > 0)
                            {
                                @foreach (var data in AllPerson)
                                {
                                    <tr id="@("row"+data.Id)" class="text-center">
                                        <td>@serialNumber</td>
                                        <td>@data.FirstName  @data.LastName</td>
                                        <td>@data.MobileNo</td>
                                        <td>@data.City</td>
                                        <td>
                                            <button type="button" class="btn btn-icon btn-outline-primary p-1 mx-2" @onclick="() => AddPerson(data.Id)">
                                                <i class="ti-pencil m-0"></i>
                                            </button>
                                            <button type="button" class="btn btn-icon btn-outline-danger p-1" @onclick="() => DeleteCustomer(data.Id)">
                                                <i class="ti-trash m-0"></i>
                                            </button>
                                        </td>
                                    </tr>
                                    serialNumber++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center"> There Is No @(PersonRole + "s") To Display</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@page "/PaymentBook"
@using Blazorise.Components
@using MarketStrom.DataModels.Models;

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <p class="card-title">PaymentBook</p>
                </div>
                <div class="row mt-3">
                    <div class="row">
                        <div class="col-4 d-flex align-items-center">
                            <label for="person" class="fw-bold col-4">Person Name</label>
                            <div class="col-6">
                                <Autocomplete TItem="Person" TValue="Person" Placeholder="Type To Search..." Data="@AllSuppliers"
                                              TextField="@((item) => item.FirstName + " " + item.LastName)" ValueField="@((item) => item)"
                                @bind-SelectedValue="@SelectedPerson" FreeTyping AutoPreSelect=true CloseOnSelection=true Filter="AutocompleteFilter.Contains">
                                </Autocomplete>
                            </div>
                        </div>
                        @if (SelectedPerson != null)
                        {
                            <div class="col-4 d-flex align-items-center ">
                                <label class="fw-bold">Pending Amount : @PendingToPayAmount Rs.</label>
                            </div>
                            <div class="col-4 d-flex align-items-center">
                                <button class="btn btn-warning" @onclick="PaymentDialogOpen">Payment</button>
                            </div>
                        }
                    </div>
                    @if (SelectedPerson != null)
                    {
                        <div class="mt-3">
                            @{
                                int serialNumber = 1;
                            }
                            <div class="table-responsive pt-3">
                                <table class="table expandable-table table-bordered mt-5">
                                    <thead>
                                        <tr class="text-center">
                                            <th style="background-color: #f0ad4e;">Credit</th>
                                            <th style="background-color: #f0ad4e;">Debit</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td class="align-top">
                                                <table id="pendingPaymentOrders" class="table table-bordered expandable-table">
                                                    <thead>
                                                        <tr>
                                                            <th>Amount</th>
                                                            <th>Payment Mode</th>
                                                            <th>Received Date</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @if (PendingPaymentOrders.Count > 0)
                                                        {
                                                            @foreach (var order in PendingPaymentOrders)
                                                            {
                                                                <tr>
                                                                    <td>@order.PaidAmount</td>
                                                                    <td>@order.PaymentMode</td>
                                                                    <td>@order.ReceivedDate.ToString("dd-MM-yyyy")</td>
                                                                </tr>
                                                            }
                                                        }
                                                        else
                                                        {
                                                            <tr>
                                                                <td colspan="3" class="text-center"> There Is No Orders To Display</td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                                @*Unmatched Payment Orders*@
                                            </td>
                                            <td class="align-top td-bgcolor">
                                                <table id="khatabook" class="table table-striped expandable-table table-bordered">
                                                    <thead>
                                                        <tr class="text-center">
                                                            <th>Sr. No.</th>
                                                            <th>Amount</th>
                                                            <th>Category</th>
                                                            <th>Qty</th>
                                                            <th>Kg</th>
                                                            <th>Price</th>
                                                            <th>Order No.</th>
                                                            <th>Date</th>
                                                            <th>Due Days</th>
                                                            <th>Communitive Balance</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @if (PendingOrders.Count > 0)
                                                        {
                                                            double cumulativeBalance = 0;
                                                            @foreach (var data in PendingOrders)
                                                            {
                                                                cumulativeBalance += data.TotalAmount;
                                                                <tr id="@("row"+data.Id)" class="text-center">
                                                                    <td>@serialNumber</td>
                                                                    <td>@data.TotalAmount</td>
                                                                    <td>@data.CategoryName</td>
                                                                    <td>@(data.Quantity == null ? "-" : data.Quantity)</td>
                                                                    <td>@(data.Kg == null ? "-" : data.Kg)</td>
                                                                    <td>@data.Price</td>
                                                                    <td>@data.OrderNumber</td>
                                                                    <td>@(data.CreatedOn.ToString("dd-MM-yyyy"))</td>
                                                                    <td>@(Math.Round((DateTime.Today.Date - data.CreatedOn.Date).TotalDays, 0)) Days</td>
                                                                    <td>@cumulativeBalance</td>
                                                                </tr>
                                                                serialNumber++;
                                                            }
                                                        }
                                                        else
                                                        {
                                                            <tr>
                                                                <td colspan="10" class="text-center"> There Is No Orders To Display</td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="mt-3">
                            @{
                                int serialNumber = 1;
                            }
                            <div class="table-responsive pt-3">
                                <table id="khatabook" class="table table-striped expandable-table table-bordered">
                                    <thead>
                                        <tr class="text-center">
                                            <th>Sr. No.</th>
                                            <th>Customer Name</th>
                                            <th>Amount</th>
                                            <th>Due Days</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (FinancialData.Count > 0)
                                        {
                                            @foreach (var data in FinancialData)
                                            {
                                                <tr id="@("row"+data.Id)" class="text-center" @onclick="@(() =>PersonSelected(data.Id))">
                                                    <td>@serialNumber</td>
                                                    <td>@data.FirstName @data.LastName</td>
                                                    <td>@data.FinalAmount</td>
                                                    <td>@(Math.Round((DateTime.Today.Date - data.PaymentDueDays.Date).TotalDays, 0)) Days</td>
                                                </tr>
                                                serialNumber++;
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="4" class="text-center"> There Is No Orders To Display</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
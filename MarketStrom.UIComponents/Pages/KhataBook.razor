@page "/KhataBook"
@using Blazorise.Splitter
@using Blazorise.Components
@using Blazorise;
@using MarketStrom.DataModels.Models;
<style>
    .flatpickr-calendar.static {
        top: auto !important;
    }

    .td-bgcolor {
        background-color: #f2f2f2 !important;
    }
</style>
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <p class="card-title">KhataBook</p>
                </div>
                <div class="row mt-3">
                    <div class="row">
                        <div class="col-6 d-flex align-items-center">
                            <label for="person" class="fw-bold col-4">Person Name</label>
                            <div class="col-7 ms-3">
                                <Autocomplete TItem="Person" TValue="Person" Placeholder="Type To Search..." Data="@AllPerson"
                                              TextField="@((item) => item.FirstName + " " + item.LastName)" ValueField="@((item) => item)"
                                @bind-SelectedValue="@SelectedPerson" FreeTyping AutoPreSelect=true CloseOnSelection=true Filter="AutocompleteFilter.Contains">
                                </Autocomplete>
                            </div>
                        </div>
                        <div class="col-6 d-flex align-items-center">
                            <label for="date" class="fw-bold col-3">Date</label>
                            <div class="col-6">
                                <Blazorise.DatePicker TValue="DateTime?" @bind-Dates="@DateRange" InputMode="DateInputMode.Date" SelectionMode="DateInputSelectionMode.Range" />
                            </div>
                        </div>
                    </div>
                    @if (SelectedPerson != null)
                    {
                        <table class="table expandable-table table-bordered mt-5">
                            <thead>
                                <tr class="text-center">
                                    <th style="background-color: #f0ad4e;">Credit</th>
                                    <th style="background-color: #f0ad4e;">Debit</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int index = 1;
                                }
                                @foreach (var paymentOrder in GroupedPaymentOrders)
                                {
                                    var paymentId = paymentOrder.Key.Split(',');
                                    var sellorder = SellOrders.Where(o => o.Id == int.Parse(paymentId.First())).FirstOrDefault();
                                    bool isInDateRange = sellorder == null ? false : true;
                                    if (_dateRange != null && sellorder != null)
                                    {
                                        if (_dateRange.Count > 1)
                                        {
                                            isInDateRange = sellorder.CreatedOn.Date >= _dateRange[0].Value.Date && sellorder.CreatedOn.Date <= _dateRange[1].Value.Date;
                                        }
                                        else
                                        {
                                            isInDateRange = sellorder.CreatedOn.Date == _dateRange[0].Value.Date;
                                        }
                                    }
                                    if (isInDateRange)
                                    {
                                        <tr>
                                            <td class="align-top td-bgcolor">
                                                @if (paymentId.Length > 0)
                                                {
                                                    <table id="sellOrders" class="table table-bordered expandable-table">
                                                        @if (index == 1)
                                                        {
                                                            <thead>
                                                                <tr>
                                                                    <th>Amount</th>
                                                                    <th>Payment Mode</th>
                                                                    <th>Received Date</th>
                                                                </tr>
                                                            </thead>
                                                        }

                                                        <tbody>
                                                            @foreach (var order in paymentOrder)
                                                            {
                                                                <tr>
                                                                    <td>@order.PaidAmount</td>
                                                                    <td>@order.PaymentMode</td>
                                                                    <td>@order.ReceivedDate.ToString("dd-MM-yyyy")</td>
                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>
                                                }
                                            </td>
                                            <td class="align-top td-bgcolor">
                                                <table id="paymentOrders" class="table table-bordered expandable-table">
                                                    @if (index == 1)
                                                    {
                                                        <thead>
                                                            <tr>
                                                                <th>Amount</th>
                                                                <th>Category Name</th>
                                                                <th>Quantity</th>
                                                                <th>Kg</th>
                                                                <th>Order No.</th>
                                                                <th>Date</th>
                                                            </tr>
                                                        </thead>
                                                    }
                                                    <tbody>
                                                        @foreach (var Id in paymentId)
                                                        {
                                                            if (!string.IsNullOrEmpty(Id))
                                                            {
                                                                var order = SellOrders.Where(o => o.Id == int.Parse(Id)).FirstOrDefault();
                                                                bool isInRange = order == null ? false : true;
                                                                if (_dateRange != null && order != null)
                                                                {
                                                                    if (_dateRange.Count > 1)
                                                                    {
                                                                        isInRange = order.CreatedOn.Date >= _dateRange[0].Value.Date && order.CreatedOn.Date <= _dateRange[1].Value.Date;
                                                                    }
                                                                    else
                                                                    {
                                                                        isInRange = order.CreatedOn.Date == _dateRange[0].Value.Date;
                                                                    }
                                                                }
                                                                if (order != null && isInRange)
                                                                {
                                                                    <tr>

                                                                        <td>@order.TotalAmount</td>
                                                                        <td>@order.CategoryName</td>
                                                                        <td>
                                                                            @(
                                                                                order.Quantity == null ? "-" : order.Quantity
                                                                                )
                                                                        </td>
                                                                        <td>
                                                                            @(
                                                                                order.Kg == null ? "-" : order.Kg
                                                                                )
                                                                        </td>
                                                                        <td>@order.OrderNumber</td>
                                                                        <td>
                                                                            @(
                                                                                order.CreatedOn.ToString("dd-MM-yyyy")
                                                                                )
                                                                        </td>
                                                                    </tr>
                                                                }
                                                            }
                                                        }
                                                    </tbody>
                                                </table>
                                            </td>
                                        </tr>
                                        index++;
                                    }
                                }

                                <tr style="border: 2px solid;">
                                    <td class="align-top td-bgcolor">
                                        <table id="pendingPaymentOrders" class="table table-bordered expandable-table">
                                            @if (GroupedPaymentOrders.Count == 0)
                                            {
                                                <thead>
                                                    <tr>
                                                        <th>Amount</th>
                                                        <th>Payment Mode</th>
                                                        <th>Received Date</th>
                                                    </tr>
                                                </thead>
                                            }
                                            <tbody>
                                                @foreach (var order in PendingPaymentOrders)
                                                {
                                                    <tr>
                                                        <td>@order.PaidAmount</td>
                                                        <td>@order.PaymentMode</td>
                                                        <td>@order.ReceivedDate.ToString("dd-MM-yyyy")</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                        @*Unmatched Payment Orders*@
                                    </td>
                                    <td class="align-top td-bgcolor">
                                        <table id="pendingPaymentOrders" class="table table-bordered expandable-table">
                                            @if (GroupedPaymentOrders.Count == 0)
                                            {
                                                <thead>
                                                    <tr>
                                                        <th>Amount</th>
                                                        <th>Category Name</th>
                                                        <th>Quantity</th>
                                                        <th>Kg</th>
                                                        <th>Order No.</th>
                                                        <th>Date</th>
                                                    </tr>
                                                </thead>
                                            }
                                            <tbody>
                                                @foreach (var order in SellOrders.Where(o => o.PaymentStatus == DataModels.Enums.PaymentStatus.Pending).ToList())
                                                {
                                                    <tr>
                                                        <td>@order.TotalAmount</td>
                                                        <td>@order.CategoryName</td>
                                                        <td>
                                                            @(
                                                                order.Quantity == null ? "-" : order.Quantity
                                                                )
                                                        </td>
                                                        <td>
                                                            @(
                                                                order.Kg == null ? "-" : order.Kg
                                                                )
                                                        </td>
                                                        <td>@order.OrderNumber</td>
                                                        <td>
                                                            @(
                                                                order.CreatedOn.ToString("dd-MM-yyyy")
                                                                )
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                        @*Pending to Pay Sell Orders*@
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
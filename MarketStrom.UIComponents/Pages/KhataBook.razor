@page "/KhataBook"
@using Blazorise.Splitter
@using Blazorise.Components
@using MarketStrom.UIComponents.Models;

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <p class="card-title">KhataBook</p>
                </div>
                <div class="row mt-3">
                    <div class="row justify-content-center">
                        <div class="col-6 d-flex align-items-center">
                            <label for="person" class="fw-bold me-3 col-3">Person Name</label>
                            <div class="col-6">
                                <Autocomplete TItem="Person" TValue="Person" Placeholder="Type To Search..." Data="@AllPerson"
                                              TextField="@((item) => item.FirstName + " " + item.LastName)" ValueField="@((item) => item)"
                                @bind-SelectedValue="@SelectedPerson" FreeTyping AutoPreSelect=true CloseOnSelection=true Filter="AutocompleteFilter.Contains">
                                </Autocomplete>
                            </div>
                        </div>
                    </div>
                    @if (SelectedPerson != null)
                    {
                        <table class="table expandable-table table-bordered mt-5">
                            <thead>
                                <tr class="text-center">
                                    <th style="background-color: #f0ad4e;">Credit</th>
                                    <th style="background-color: #f0ad4e;">Debit</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int index = 1;
                                }
                                @foreach (var paymentOrder in GroupedPaymentOrders)
                                {
                                    var paymentId = paymentOrder.Key.Split(',');
                                    <tr>
                                        <td class="align-top">
                                            @if (paymentId.Length > 0)
                                            {
                                                <table id="sellOrders" class="table table-bordered expandable-table">
                                                    @if (index == 1)
                                                    {
                                                        <thead>
                                                            <tr>
                                                                <th>Amount</th>
                                                                <th>Received Date</th>
                                                            </tr>
                                                        </thead>
                                                    }

                                                    <tbody>

                                                        @foreach (var order in paymentOrder)
                                                        {
                                                            <tr>
                                                                <td>@order.PaidAmount</td>
                                                                <td>@order.ReceivedDate.ToString("dd-MM-yyyy")</td>
                                                            </tr>
                                                        }

                                                    </tbody>
                                                </table>
                                            }
                                        </td>
                                        <td class="align-top">
                                            <table id="paymentOrders" class="table table-bordered expandable-table">
                                                @if (index == 1)
                                                {
                                                    <thead>
                                                        <tr>
                                                            <th>Amount</th>
                                                            <th>Category Name</th>
                                                            <th>Quantity</th>
                                                            <th>Kg</th>
                                                            <th>Order No.</th>
                                                            <th>Date</th>
                                                        </tr>
                                                    </thead>
                                                }
                                                <tbody>
                                                    @foreach (var Id in paymentId)
                                                    {
                                                        if (!string.IsNullOrEmpty(Id))
                                                        {
                                                            <tr>
                                                                @{
                                                                    var order = SellOrders.Where(o => o.Id == int.Parse(Id)).First();
                                                                    <td>@order.TotalAmount</td>
                                                                    <td>@order.CategoryName</td>
                                                                    <td>
                                                                        @(
                                                                        order.Quantity == null ? "-" : order.Quantity
                                                                            )
                                                                    </td>
                                                                    <td>
                                                                        @(
                                                                        order.Kg == null ? "-" : order.Kg
                                                                            )
                                                                    </td>
                                                                    <td>@order.OrderNumber</td>
                                                                    <td>
                                                                        @(
                                                                        order.CreatedOn.ToString("dd-MM-yyyy")
                                                                            )
                                                                    </td>
                                                                }
                                                            </tr>
                                                        }
                                                    }
                                                </tbody>
                                            </table>
                                        </td>
                                    </tr>
                                    index++;
                                }

                                <tr style="border: 2px solid;">
                                    <td>
                                        <table id="pendingPaymentOrders" class="table table-bordered expandable-table">
                                            <tbody>
                                                @foreach (var order in PendingPaymentOrders)
                                                {
                                                    <tr>
                                                        <td>@order.PaidAmount</td>
                                                        <td>@order.ReceivedDate.ToString("dd-MM-yyyy")</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                        @*Unmatched Payment Orders*@
                                    </td>
                                    <td>
                                        <table id="pendingPaymentOrders" class="table table-bordered expandable-table">
                                            <tbody>
                                                @foreach (var order in SellOrders.Where(o => o.PaymentStatus == Enums.PaymentStatus.Pending).ToList())
                                                {
                                                    <tr>
                                                        <td>@order.TotalAmount</td>
                                                        <td>@order.CategoryName</td>
                                                        <td>
                                                            @(
                                                                order.Quantity == null ? "-" : order.Quantity
                                                                )
                                                        </td>
                                                        <td>
                                                            @(
                                                                order.Kg == null ? "-" : order.Kg
                                                                )
                                                        </td>
                                                        <td>@order.OrderNumber</td>
                                                        <td>
                                                            @(
                                                                order.CreatedOn.ToString("dd-MM-yyyy")
                                                                )
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                        @*Pending to Pay Sell Orders*@
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
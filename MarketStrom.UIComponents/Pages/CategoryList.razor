@page "/CategoryList"

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <p class="card-title">Category List</p>
                    <div class="d-flex align-items-center">
                        <div class="card card-green">
                            <button class="btn btn-primary btn-lg text-white" style="padding:0.5rem;border-radius:inherit;" @onclick="() => AddCategory(0)">
                                <i class="mdi mdi-plus"></i>
                                Add
                            </button>
                        </div>
                    </div>
                </div>
                @{
                    int serialNumber = 1;
                }
                <div class="table-responsive pt-3">
                    <table id="categoryList" class="table expandable-table table-striped table-bordered">
                        <thead>
                            <tr class="text-center">
                                <th>Sr. No.</th>
                                <th>Category Name</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Catogories.Count > 0)
                            {
                                @foreach (var data in Catogories)
                                {
                                    <tr id="@("row"+data.Id)" class="text-center">
                                        <td>@serialNumber</td>
                                        <td>@data.Name</td>
                                        <td>
                                            <button type="button" class="btn btn-icon btn-outline-primary p-1 mx-2" @onclick="() => AddCategory(data.Id)">
                                                <i class="ti-pencil m-0"></i>
                                            </button>
                                            @*<button type="button" class="btn btn-icon btn-outline-danger p-0 ml-5" @onclick="() => DeleteCategory(data)">
                                                <i class="ti-trash m-0"></i>
                                            </button>*@
                                        </td>
                                    </tr>
                                    serialNumber++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="3" class="text-center"> There Is No Categories To Display</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@inherits Base.PopupMasterComponent
<div class="modal fade show d-block" id="contactModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header popupHeader">
                <div class="d-flex pupupheaderDiv">
                    <div class="flex-grow-1 p-2">
                        @* <span class="icon">
                        <img src="_content/AEM.TDPU.Themes/Images/LogoAEM.svg">
                        </span>*@
                        <span class="caption">MarketStrom</span>
                    </div>
                    <button type="button" class="close p-2" aria-label="Close" @onclick=ModalCancel>
                        <span aria-hidden="true">&times;</span>
                    </button>
                    @*<div class="p-2">
                    <span class="icon closeBtnSpan">
                    <img @onclick="ModalCancel" data-dismiss="modal" src="_content/AEM.TDPU.Themes/Images/Closebtn.svg">
                    </span>
                    </div>*@
                </div>
            </div>
            <div class="modal-body">
                <div class="pl-2 pb-0 mb-0 popupName" style="font-size:20px">@Title</div>
                <div class="d-flex flex-column mt-2 popupDetail">
                    <div class="pl-2 pt-2">
                        <span style="font-size:16px"> @Message </span>
                    </div>
                    <div class="row pl-2 pt-3">
                        <div class="col-2"><button type="button" @onclick="ModelSubmit" data-dismiss="modal" class="btn btn-outline-primary">OK</button></div>
                        <div class="col-2 pl-0"><button type="button" @onclick="ModelNo" data-dismiss="modal" class="btn btn-outline-dark">No</button></div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
@inherits Base.PopupMasterComponent

<style>
    .closebtn {
        background-color: #F4F5F7;
        border: #F4F5F7
    }
</style>

<div class="modal fade show d-block" id="contactModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content card p-0">
            <div class="modal-body">
                <div class="float-end">
                    <button type="button" class="close closebtn btn-lg p-0" aria-label="Close" @onclick=ModalCancel>
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="pl-2 pb-0 mb-0 popupName" style="font-size:20px">@Title</div>
                <div class="d-flex flex-column mt-2 popupDetail">
                    <div class="pl-2 pt-2">
                        <span style="font-size:16px"> @Message </span>
                    </div>
                    <div class="row pl-2 pt-3">
                        <div class="col-2"><button type="button" @onclick="ModalSubmit" data-dismiss="modal" class="btn btn-outline-primary">OK</button></div>
                        <div class="col-2 pl-0"><button type="button" @onclick="ModalCancel" data-dismiss="modal" class="btn btn-outline-dark">Cancel</button></div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
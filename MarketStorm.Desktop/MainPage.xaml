<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MarketStorm.Desktop"
             xmlns:RazorPages="clr-namespace:MarketStrom.UIComponents;assembly=MarketStrom.UIComponents"
             x:Class="MarketStorm.Desktop.MainPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <BlazorWebView HostPage="wwwroot/index.html">
        <BlazorWebView.RootComponents>
            <RootComponent Selector="#app" ComponentType="{x:Type RazorPages:Main}" />
        </BlazorWebView.RootComponents>
    </BlazorWebView>

</ContentPage>